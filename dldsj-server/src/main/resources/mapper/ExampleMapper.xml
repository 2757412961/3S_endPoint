<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.zju.gis.dldsj.server.mapper.ExampleMapper">
    <resultMap id="BaseResultMap" type="edu.zju.gis.dldsj.server.entity.Example">
        <id column="ID" jdbcType="VARCHAR" property="id"/>
        <result column="NAME" jdbcType="VARCHAR" property="name"/>
        <result column="AGE" jdbcType="INTEGER" property="age"/>
        <result column="TIME" jdbcType="TIMESTAMP" property="time"/>
        <result column="GENDER" jdbcType="TINYINT" property="gender"/>
    </resultMap>
    <sql id="Base_Column_List">
        ID, NAME, AGE, TIME, GENDER
    </sql>
    <sql id="TABLE_NAME">
        tb_example
    </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from <include refid="TABLE_NAME"/>
        where ID = #{id,jdbcType=VARCHAR}
    </select>
    <select id="selectByPage" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from <include refid="TABLE_NAME"/>
        limit #{offset,jdbcType=INTEGER},#{size,jdbcType=INTEGER}
    </select>

    <select id="search" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM <include refid="TABLE_NAME"/>
        <where>
            <if test="id!=null and id.length() &gt; 0">AND ID like "%${id}%"</if>
            <if test="name!=null and name.length() &gt; 0">AND NAME like "%${name}%"</if>
        </where>
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.String">
        delete
        from <include refid="TABLE_NAME"/>
        where ID = #{id,jdbcType=VARCHAR}
    </delete>

    <insert id="insert" parameterType="edu.zju.gis.dldsj.server.entity.Example">
        insert into <include refid="TABLE_NAME"/> (
          <include refid="Base_Column_List"/>
        )
        values (#{id,jdbcType=VARCHAR},
                #{name,jdbcType=VARCHAR},
                #{age,jdbcType=INTEGER},
                #{time,jdbcType=TIMESTAMP},
                #{gender,jdbcType=TINYINT})
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="edu.zju.gis.dldsj.server.entity.Example">
        update <include refid="TABLE_NAME"/>
        <set>
            <if test="name != null">
                NAME = #{name,jdbcType=VARCHAR},
            </if>
            <if test="time != null">
                TIME = #{registrationTime,jdbcType=TIMESTAMP},
            </if>
        </set>
        where ID = #{id,jdbcType=VARCHAR}
    </update>
    <update id="updateByPrimaryKey" parameterType="edu.zju.gis.dldsj.server.entity.Example">
        update <include refid="TABLE_NAME"/>
        set NAME              = #{name,jdbcType=VARCHAR},
            TIME = #{registrationTime,jdbcType=TIMESTAMP},
            AGE          = #{dirSize,jdbcType=INTEGER},
        where ID = #{id,jdbcType=VARCHAR}
    </update>
</mapper>