<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 该文件编写mybatis中的mapper接口里面的方法，提供对应的sql语句 -->
<!--
/**
 * @author Jinghaoyu
 * @version 1.0 2020/08/20
 *
 * 轮播图
 */
-->
<mapper namespace="edu.zju.gis.dldsj.server.mapper.RotationFigureMapper">
	<resultMap id="BaseResultMap" type="edu.zju.gis.dldsj.server.entity.RotationFigure">
		<id column="ID" jdbcType="INTEGER" property="id"/>
		<result column="IMG_PATH" jdbcType="VARCHAR" property="imgPath"/>
		<result column="PAGE_PATH" jdbcType="VARCHAR" property="pagePath"/>
		<result column="PAGE_TYPE" jdbcType="VARCHAR" property="pageType"/>
		<result column="SAVE_TIME" jdbcType="TIMESTAMP" property="saveTime"/>
	</resultMap>
	<sql id="Base_Column_List">
        ID, IMG_PATH, PAGE_PATH, PAGE_TYPE, SAVE_TIME
    </sql>
    <!-- 查询所有数据 -->
    <select id="findAll" resultType="edu.zju.gis.dldsj.server.entity.RotationFigure">
		SELECT
		ID,IMG_PATH,PAGE_PATH,SAVE_TIME,PAGE_TYPE
		FROM
		vi_rotation_figure2
	</select>

	<select id="findByPaging" resultMap="BaseResultMap" parameterType="map">
		SELECT
		ID,IMG_PATH,PAGE_PATH,SAVE_TIME,PAGE_TYPE
		FROM
		vi_rotation_figure2
	</select>
	<select id="selectByPrimaryKey" parameterType="java.lang.String" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"/>
		from vi_rotation_figure2
		where ID = #{id,jdbcType=INTEGER}
	</select>
	<select id="selectByPage" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"/>
		from vi_rotation_figure2
		limit #{offset,jdbcType=INTEGER},#{size,jdbcType=INTEGER}
	</select>

	<select id="selectById" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"/>
		from vi_rotation_figure2
		where ID=#{roleId,jdbcType=INTEGER} limit #{offset,jdbcType=INTEGER},#{size,jdbcType=INTEGER}
	</select>

	<select id="ifFigureExist" parameterType="Integer" resultType="int">
      select count(*) from vi_rotation_figure2 where ID = #{ID,jdbcType=VARCHAR}
    </select>

</mapper>